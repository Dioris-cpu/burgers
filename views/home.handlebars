
<link rel="stylesheet" href="/css/style.css">
<div class="container">
    <div class="img-container">
        <img src="https://images-na.ssl-images-amazon.com/images/I/71f749qfqCL._AC_SX466_.jpg" alt="kawaii Burger">
    </div>
    <h1 class="title">Eat-Da-Burger</h1>
    <div class="lists-continer">
        {{!-- This is not Devoured --}}
       <h3>Not Devoured</h3>
        <div>
         {{#each burgers}}
            {{#with dataValues}}
            {{#unless isDevoured}}
         <div>
              {{ name }} <button class="devour" data-id="{{id}}">Devour it </button>
         </div>
            {{/unless}}
            {{/with}}
         {{/each}}
        </div>
        {{!-- This is Devoured --}}
        <h3>Devoured</h3>
        <div>
        {{#each burgers}}
             {{#if dataValues.isDevoured}}
         <div>
             {{ dataValues.name }} 
         </li>
            {{/if}}
         {{/each}}
        </div>
    </div>

    <div class="input-container">
         <input type="text" id="newBurger" placeholder="Enter Burger Name">
    </div>
   
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="crossorigin="anonymous"></script>

<script src="/js/script.js"></script>